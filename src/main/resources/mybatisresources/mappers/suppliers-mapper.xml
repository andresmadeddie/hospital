<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.db.jdbc.interfaces.ISupplierDAO">
    <resultMap id="SupplierResultMap" type="Supplier" autoMapping="false">
        <result property="supplierId" column="id"/>
        <result property="name" column="name"/>
        <result property="contactPerson" column="contact_person"/>
        <result property="phoneNumber" column="phone_number"/>
        <result property="email" column="email"/>
    </resultMap>
    <insert id="insert" parameterType="Supplier" useGeneratedKeys="true" keyProperty="supplierId">
        INSERT INTO supplier (name) VALUES (#{name});
        INSERT INTO supplier (contact_person) VALUES (#{contactPerson});
        INSERT INTO supplier (phone_number) VALUES (#{phoneNumber});
        INSERT INTO supplier (email) VALUES (#{email});
    </insert>
    <update id="update" parameterType="Supplier">
        UPDATE supplier SET
        id = #{supplierId}, name = #{name}, contact_person = #{contactPerson}, phone_number = #{phoneNumber}, email =
        #{email}
        WHERE id = #{supplierId};
    </update>
    <delete id="deleteById" parameterType="int">
        DELETE FROM supplier WHERE id = #{supplierId};
    </delete>
    <select id="getAll" resultMap="SupplierResultMap">
        SELECT * FROM supplier;
    </select>
    <select id="getById" parameterType="int" resultMap="SupplierResultMap">
        SELECT * FROM supplier WHERE id = #{supplierId};
    </select>
    <select id="getSupplierByName" parameterType="String" resultMap="SupplierResultMap">
        SELECT * FROM supplier WHERE name = #{name};
    </select>
</mapper>